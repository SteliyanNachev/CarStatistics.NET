
@using Project.Web.ViewModels.Car
@model CarListingViewModel

<h1>All</h1>

<div>
    <a href="/Car/Create" class="btn btn-success d-block">Add Car</a>
</div>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            Make
        </th>
        <th>
            Model
        </th>
        <th>
            Fuel
        </th>
        <th>
            Kilometers
        </th>
    </tr>
    @foreach (var car in Model.Cars)
    {
        <tr>
            <td>
                @car.Make
            </td>
            <td>
                @car.Model
            </td>
            <td>
                @car.Fuel
            </td>
            <td>
                @car.Kilometers
            </td>
            <td>
                <a class="justify-content-sm-center" href="CarDetails/@car.Id" >Details</a>
            </td>
        </tr>
    }
</table>
